{
  "manifest_version": 3,
  "name": "YouTube Transcript Copier",
  "version": "1.0",
  "description": "Extracts a YouTube video transcript with chapters, formats it, and copies it to the clipboard.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpeg",
      "48": "icons/icon48.jpeg",
      "128": "icons/icon128.jpeg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  }
}
